    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run_dialog.py",
            "args": ["--task", "sweep", "--llm", "meta/llama-3.1-405b-instruct"] ,
            "console": "integratedTerminal",
            // "justMyCode": false,  // Allows debugging into external libraries
            "env": {
                "PYTHONPATH": "${workspaceFolder}"  // Ensures correct path resolution
            }
        }
    ]
}